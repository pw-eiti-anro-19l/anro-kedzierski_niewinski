
<robot name="zad2">
<xacro:property name="params" value="${load_yaml('/urdfparam.yaml')}"/>

<material name="blue">
    <color rgba="0 0 0.8 1"/>
</material>

<material name="white">
    <color rgba="1 1 1 1"/>
</material>


<link name="floor">
    	<visual>

      		<geometry>
        		<box size ="10 10 0"/>
     		 </geometry>
	<material name="white"/>
    	</visual>
</link>

<link name="link1">
    	<visual>

      		<geometry>
        		<cylinder length="${params['j1']['len']" radius="0.05"/>
     		 </geometry>
	<origin xyz="0 0 0.5" rpy="0 0 0" />
	
    	</visual>
</link>
<link name="link2">
   	 <visual>

      		<geometry>
        		<cylinder length="1" radius="0.05"/>
      		</geometry>
	<material name="blue"/>
	<origin xyz="0 0 0.5" rpy="0 0 0" />
    	</visual>
	
  </link>
<link name="link3">
    	<visual>

     		 <geometry>
       			 <cylinder length="0.5" radius="0.05"/>
      		</geometry>
	<material name="white"/>
	<origin xyz="0 0 0.25" rpy="0 0 0" />
    	</visual>
</link>

<joint name="joint1" type="continuous">
	<parent link="floor"/>
	<child link="link1"/>
	<origin xyz="0 0 0" rpy="0 0 0" />
	<axis xyz="0 0 1"/>
</joint>


<joint name="joint2" type="continuous">
	<parent link="link1"/>
	<child link="link2"/>
	<origin xyz="0 0 1" rpy="-1.57 0 0" />
	<axis xyz="1 0 0"/>
	
</joint>

<joint name="joint3" type="continuous">
	<parent link="link2"/>
	<child link="link3"/>
	<origin xyz="0 0 1" rpy="0 0 0" />
	<axis xyz="1 0 0"/>
	
</joint>



</robot>
