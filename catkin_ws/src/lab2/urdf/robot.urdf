<?xml version="1.0"?>
<robot name="roBOT" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="params" value="${load_yaml('../src/out.yaml')}"/>

    <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
    </visual>
    </link>

    <link name="link1">
    <visual>
      <geometry>
        <cylinder length="${params['firstRow']['len']}" radius="0.05"/>
      </geometry>
      <origin xyz="${params['firstRow']['xyz']}" rpy="${params['firstRow']['rpy']}"/>
    </visual>
    </link>

    <link name="link2">
    <visual>
      <geometry>
        <cylinder length="${params['secondRow']['len']}" radius="0.05"/>
      </geometry>
      <origin xyz="${params['secondRow']['xyz']}" rpy="${params['secondRow']['rpy']}"/>
    </visual>
    </link>

    <link name="link3">
    <visual>
      <geometry>
        <cylinder length="${params['thirdRow']['len']}" radius="0.05"/>
      </geometry>
      <origin xyz="${params['thirdRow']['xyz']}" rpy="${params['thirdRow']['rpy']}"/>
    </visual>
    </link>

    <link name="join1">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    </link>

    <link name="join2">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    </link>

    <link name="join3">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    </link>

    <joint name="base_link1" type="prismatic">
        <parent link="base_link"/>
        <child link="link1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
         <limit effort="1000.0" lower="${params['firstRow']['limit']}" upper="0" velocity="0.5"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="link1_join1" type="fixed">
        <parent link="link1"/>
        <child link="join1"/>
        <origin xyz="0 0 ${params['firstRow']['len']}" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="join1_link2" type="continuous">
        <parent link="join1"/>
        <child link="link2"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
         <limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="link2_join2" type="fixed">
        <parent link="link2"/>
        <child link="join2"/>
        <origin xyz="0 ${params['secondRow']['len']} 0" rpy="0 0 0"/>
         <limit effort="1000.0" lower="-3.14 " upper="3.14" velocity="0.5"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="join2_link3" type="continuous">
        <parent link="join2"/>
        <child link="link3"/>
        <origin xyz="0 0 0 " rpy="0 0 0"/>
         <limit effort="1000.0" lower="-3.14 " upper="3.14" velocity="0.5"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="link3_join3" type="fixed">
        <parent link="link3"/>
        <child link="join3"/>
        <origin xyz="0 ${params['thirdRow']['len']} 0" rpy="0 0 0"/>
         <limit effort="1000.0" lower="-3.14 " upper="3.14" velocity="0.5"/>
        <axis xyz="0 0 1"/>
    </joint>

</robot>
